@using ProjetGED.Models
@using System.Security.Claims


<div class="container" style="margin-bottom:5rem;">
    <h1>Latest Documents</h1>
    <div class="row">
        @foreach (var document in ((List<Document>)ViewData["documents"]))
        {
            <div class="col-md-3" style="margin: 0 10px;">
                <iframe src="/Cloud/@document.Path" width="100%" height="100%"></iframe>
            </div>
        }

    </div>
</div>



@{
    ViewBag.Title = "Index";
    var claimsIdentity = User.Identity as ClaimsIdentity;
    int userId = Convert.ToInt32(claimsIdentity.FindFirst("UserId").Value);
    Html.RenderPartial("_Upload", userId);
}
<hr />
@{Html.RenderPartial("_Breadcrumb"); }



<table class="table" id="myTable">
    <thead style="background: #000;color: #fff;">
        <tr>
            <th>Icon</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Version</th>
            <th>Gérer</th>
            <th>Remove</th>
            <th>Rename</th>

        </tr>

    </thead>


    <tbody>

        @foreach (var folder in ((List<Folder>)ViewData["folders"]))
        {


            <tr class="table-secondary">

                <td><i class="fa fa-folder-open-o"></i></td>
                <td>@Html.ActionLink(folder.Name, "Index", "Folder", new { slug = @folder.Path.Replace('\\', '/') }, null)</td>
                <td>@folder.CreatedAt.ToShortDateString()</td>
                <td></td>
                <td>
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#manageView">
                        <i class="fa fa-cogs"></i>
                    </button>
                </td>
                <td style="text-align: center;">


                    <button type="button" class="btn btn-danger">
                        <i class="fa fa-trash" aria-hidden="true" data-bs-toggle="modal" data-bs-target="#removeFolder"></i>
                    </button>

                    <div id="removeFolder" class="modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Delete Folder</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Do you want to delete @folder.Name</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                    @using (Html.BeginForm("Remove", "Folder", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <input type="hidden" name="folderId" value="@folder.Id" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    }


                                </div>
                            </div>
                        </div>
                    </div>

                </td>

                <td style="text-align: center;">
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#renameFolder">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </button>
                </td>


                <div id="renameFolder" class="modal fade" tabindex="-1" aria-hidden="true" aria-labelledby="renameFolder">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title" id="manageViewLabel">Rename Folder</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>

                            @using (Html.BeginForm("Rename", "Folder", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="modal-body">

                                    <input name="folderId" type="hidden" value="@folder.Id" class="form-control" />
                                    <input name="newFolderName" type="text" class="form-control" placeholder="Enter new name" />

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            }

                        </div>
                    </div>
                </div>





            </tr>

            <div id="manageView" class="modal fade" tabindex="-1" aria-hidden="true" aria-labelledby="manageViewLabel">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="manageViewLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        @using (Html.BeginForm("Access", "Folder", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="modal-body">

                                <input name="folderId" type="hidden" value="@folder.Id" />

                                <select class="form-select" name="userFolder">

                                    @foreach (var us in ((List<User>)ViewData["users"]))
                                    {
                                        <option selected>Select user to add</option>
                                        <option value="@us.Id">@us.Name</option>
                                    }


                                </select>



                                <label>Read</label>
                                <input type="checkbox" name="read" value="true" />&nbsp;&nbsp;&nbsp;

                                <label>Write</label>
                                <input type="checkbox" name="write" value="true" />&nbsp;&nbsp;&nbsp;

                                <label>Download</label>
                                <input type="checkbox" name="download" value="true" />&nbsp;&nbsp;&nbsp;




                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        }
                    </div>
                </div>
            </div>

        }
        @foreach (var document in ((List<Document>)ViewData["documents"]))
        {
            <tr>
                <td><i class="fa fa-file text-primary"></i></td>
                <td>@Html.ActionLink(document.Name, "Display", "Document", new { docPath = @document.Path.Replace('\\', '/') }, null)</td>
                <td>@document.UploadedAt.ToShortDateString()</td>
                <td>@document.Version</td>
                <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#manageViewDocument">
                        <i class="fa fa-cogs"></i>
                    </button>
                </td>
                <td style="text-align: center;">
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#removeDocument">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                </td>
                <td style="text-align: center;">
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#renameView">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </button>
                </td>
                <div id="renameView" class="modal fade" tabindex="-1" aria-hidden="true" aria-labelledby="renameView">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title" id="renameViewLabel">Rename Document</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>

                            @using (Html.BeginForm("DocumentRename", "Folder", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="modal-body">

                                    <input name="documentId" type="hidden" value="@document.Id" class="form-control" placeholder="Enter new name" />
                                    <input name="newDocumentName" type="text" class="form-control" />

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Rename</button>
                                </div>
                            }

                        </div>
                    </div>
                </div>

                <div id="removeDocument" class="modal" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Delete Folder</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Do you want to delete @document.Name</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                @using (Html.BeginForm("Remove", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <input type="hidden" name="documentId" value="@document.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </tr>

            <div id="manageViewDocument" class="modal fade" tabindex="-1" aria-hidden="true" aria-labelledby="manageViewLabel">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title" id="manageViewLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        @using (Html.BeginForm("DocumentAccess", "Folder", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="modal-body">

                                <input name="documentId" type="hidden" value="@document.Id" />

                                <select class="form-select" name="userFolder">

                                    @foreach (var us in ((List<User>)ViewData["users"]))
                                    {
                                        <option selected>Select user to add</option>
                                        <option value="@us.Id">@us.Name</option>
                                    }


                                </select>



                                <label>Read</label>
                                <input type="checkbox" name="read" value="true" />&nbsp;&nbsp;&nbsp;

                                <label>Write</label>
                                <input type="checkbox" name="write" value="true" />&nbsp;&nbsp;&nbsp;

                                <label>Download</label>
                                <input type="checkbox" name="download" value="true" />&nbsp;&nbsp;&nbsp;




                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        }
    </tbody>
</table>





